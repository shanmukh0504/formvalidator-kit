{
  "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "jsx": "react",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./dist/types",
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}